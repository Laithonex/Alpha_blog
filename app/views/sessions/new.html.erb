<h1 align="center" >The log-in page</h1>

<%= form_for(:session, :html =>{class:"form-horizontal", role:"form" }, url: login_path) do |f| %>

    <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: "form-control", id: "exampleInputEmail1", placeholder: "Enter your email ex. emaple@example.com", autofocuse: true %>
    </div>

    <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control", id:"exampleInputPassword1", placeholder:"Enter Password"  %> 
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "log in" ,  class: 'btn btn-primary btn-lg' %>
        </div>
    </div>

<% end %>
